<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/bgwhite"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:id="@+id/league_name"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="25-06-2021"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/date"
                android:text="33"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/pro_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="Monopoly wins"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/status"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="8dp"
            android:background="@drawable/bg_rounded_green"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:text="win"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/team_one_img"
                    android:layout_width="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/roboto_medium"
                    android:src="@drawable/football"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_light_blue"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/odds"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="4dp"
                        android:padding="5dp"
                        android:text="2.2"
                        android:textColor="@color/gnt_ad_green"
                        android:textSize="11sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/team_two_img"
                    android:layout_width="35dp"
                    android:layout_marginEnd="25dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/football"
                    android:textColor="@color/white" />




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:padding="0dp">

                <TextView
                    android:id="@+id/team_one"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Monoploy"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/team_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Potenza"
                    android:textColor="@color/black" />




            </RelativeLayout>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>